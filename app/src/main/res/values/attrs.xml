<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>
    <attr name="image" format="reference"/>
    <attr name="imageScaleType">
        <enum name = "fillXY" value="0"/>
        <enum name = "center" value="1"/>
    </attr>

    <attr name="circleColor1" format="color" />
    <attr name="circleColor2" format="color" />
    <attr name="smallCirclePercent" format="fraction" />
    <attr name="circleSpeed" format="integer" />

    <declare-styleable name="MyTitleView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>
    <declare-styleable name="MyImageView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
        <attr name="image"/>
        <attr name="imageScaleType"/>
    </declare-styleable>
    <declare-styleable name="MyCircleProgressBar">
        <attr name="circleColor1" />
        <attr name="circleColor2" />
        <attr name="smallCirclePercent" />
        <attr name="circleSpeed" />
        <!--<attr name="circleWidth"/>-->
    </declare-styleable>
</resources>
